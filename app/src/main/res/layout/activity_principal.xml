<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrincipalActivity">


    <ProgressBar
        android:id="@+id/pbPrincipal"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/lyIni"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/lyPuntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvPuntos"
            android:layout_width="140dp"
            android:layout_height="54dp"
            android:background="#F1F1F1"
            android:gravity="center"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:text="PUNTOS"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyTiempo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTiempo"
            android:layout_width="140dp"
            android:layout_height="54dp"
            android:background="#F1F1F1"
            android:gravity="center"
            android:text="00:00:00"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="30sp"
            android:textStyle="bold" />


        <TextView

            android:id="@+id/tvTextTiempo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:text="TIEMPO"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyBotones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lyPuntos">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/bMapa"
                android:layout_alignTop="@+id/bMapa"
                android:layout_alignEnd="@+id/bMapa"
                android:layout_alignBottom="@+id/bMapa"
                android:layout_marginTop="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bmapa"
                app:srcCompat="@drawable/bmapa" />

            <Button
                android:id="@+id/bMapa"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="0dp"
                android:background="#00FFFFFF"
                android:onClick="abrirMapa"
                android:text="VER MAPA"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/bCodigo"
                android:layout_alignTop="@+id/bCodigo"
                android:layout_alignEnd="@+id/bCodigo"
                android:layout_alignBottom="@+id/bCodigo"
                android:layout_marginTop="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/bescaner"
                app:srcCompat="@drawable/bescaner" />

            <Button
                android:id="@+id/bCodigo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#00FFFFFF"
                android:onClick="leerCodigo"
                android:text="REGISTRAR PUNTO"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignStart="@+id/bClasificacion"
                android:layout_alignTop="@+id/bClasificacion"
                android:layout_alignEnd="@+id/bClasificacion"
                android:layout_alignBottom="@+id/bClasificacion"
                android:layout_marginTop="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/btrofeo"
                app:srcCompat="@drawable/btrofeo" />

            <Button
                android:id="@+id/bClasificacion"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#00FFFFFF"
                android:onClick="abrirClasificacion"
                android:text="CLASIFICACIÓN"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyPuntosInf"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_default="wrap"
        app:layout_constraintHeight_max="70dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lyBotones"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#fffe00"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivPuntosN1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|right|center_horizontal"
                android:layout_weight="1"
                android:padding="10sp"
                android:paddingStart="10sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                app:srcCompat="@drawable/n1" />

            <TextView
                android:id="@+id/tvPuntosN1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#C6FFFFFF"
                android:gravity="center"
                android:text="x 0"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#6C8EFC"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivPuntosN2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|right|center_horizontal"
                android:layout_weight="1"
                android:padding="10sp"
                android:paddingStart="10sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                app:srcCompat="@drawable/n2" />

            <TextView
                android:id="@+id/tvPuntosN2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#C6FFFFFF"
                android:gravity="center"
                android:text="x 0"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FF1F1F"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivPuntosN3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center|right|center_horizontal"
                android:layout_weight="1"
                android:padding="10sp"
                android:paddingStart="10sp"
                android:paddingTop="10sp"
                android:paddingBottom="10sp"
                app:srcCompat="@drawable/n3" />

            <TextView
                android:id="@+id/tvPuntosN3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#C6FFFFFF"
                android:gravity="center"
                android:text="x 0"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyFin"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/lyIni"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lyIni">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="358dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"

            android:layout_marginEnd="80dp"
            android:layout_marginBottom="16dp"
            android:rotation="
            0"
            app:layout_constraintBottom_toTopOf="@+id/textView7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6"
            app:srcCompat="@drawable/favicon" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:text="NO HAY TIEMPO PARA MÁS"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:text="El tiempo de competición ha terminado. Ya no puedes registrar más puntos."
            android:textAlignment="center"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyIni"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimary"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lyPuntos"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <ImageView
            android:id="@+id/imageViewfdgf"
            android:layout_width="354dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="150dp"
            android:layout_marginBottom="16dp"
            android:rotation="-20"
            app:layout_constraintBottom_toTopOf="@+id/tvContadorIni"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewdsf6"
            app:srcCompat="@drawable/crono" />

        <TextView
            android:id="@+id/textViewdsf6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="32dp"
            android:text="ESTO EMPIEZA EN NADA..."
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tvContadorIni"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="50dp"
            android:text="00:00:00"
            android:textAlignment="textEnd"
            android:textColor="#000000"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>